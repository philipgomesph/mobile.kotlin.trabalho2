<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atividade3Activity">


    <EditText
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Codigo"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_material"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_material"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="Material"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_weight"
        app:layout_constraintStart_toEndOf="@+id/tv_code"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Peso"
        app:layout_constraintEnd_toStartOf="@+id/tv_color"
        app:layout_constraintStart_toEndOf="@+id/tv_material"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Cor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_weight"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadeira"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="92dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_material"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/cb_bed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cama"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_material"
        app:layout_constraintStart_toEndOf="@+id/cb_chair"
        app:layout_constraintEnd_toStartOf="@+id/cb_estante"/>

    <CheckBox
        android:id="@+id/cb_estante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estante"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="92dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_material"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>