<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/bt_atv1"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Atividade 1"
        app:layout_constraintBottom_toTopOf="@+id/bt_atv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


    <Button
        android:id="@+id/bt_atv2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="@string/atividade_2"
        app:layout_constraintBottom_toTopOf="@+id/bt_atv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_atv1"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_atv3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="@string/atividade_3"
        app:layout_constraintBottom_toTopOf="@+id/bt_atv4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_atv2"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_atv4"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Atividade 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_atv3"
        app:layout_constraintVertical_bias="0.5" />
</android.support.constraint.ConstraintLayout>